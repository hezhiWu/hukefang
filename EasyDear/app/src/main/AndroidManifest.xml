<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunwei.easydear">

    <!--用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--用于访问wifi网络信息，wifi信息会用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--用于访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--用于读取手机当前的状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />  <!--闪关灯-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- unavailable in API 23 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>


    <application
        android:name="com.yunwei.easydear.base.DataApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.yunwei.easydear.function.account.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NotitleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>

        <activity
            android:name="com.yunwei.easydear.function.account.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.mineFuncation.SetingInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.account.LoginRegistActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.account.RestPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.searchFunction.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.locationFunction.LocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.articleFunction.ArticleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        //CardDetailActivity
        <activity
            android:name=".function.mainFuncations.cardDetailFunction.CardDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.messageFunction.MessageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.messageFunction.MessageDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.businessFunction.BusinessActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.myorderlistFunction.MyOrderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.mycardlistFunction.MyCardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.mymemberlistFunction.MyMemberActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.membercenterFunction.MemberCenterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.cardpayFunction.CardPayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.pictureFuncation.SelectPictureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.pictureFuncation.ShowPictureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.mineFuncation.UpdateActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <activity
            android:name="com.yunwei.easydear.function.mainFuncations.mineFuncation.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/JK.SwipeBack.Transparent.Theme" />

        <!--支付宝页面-->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind" >
        </activity>
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind" >
        </activity>

        <!-- 高德地图配制[吴和志] -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="@string/GAODE_MAP_KEY" />

        <service android:name="com.amap.api.location.APSService" />

        <!-- Bugly配置参数[吴和志]-->
        <meta-data
            android:name="BUGLY_APPID"
            android:value="3ee59711a6" />
        <!-- 配置APP版本-->
        <meta-data
            android:name="BUGLY_APP_VERSION"
            android:value="1.0" />
        <!-- 配置Bugly调试模式（true或者false-->
        <meta-data
            android:name="BUGLY_ENABLE_DEBUG"
            android:value="true" />
    </application>

</manifest>