<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunwei.easydear.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mineFragment_userInfo_layout"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <TextView
                    android:id="@+id/mineFragment_user_nick_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:text="LEO"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mineFragment_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:text="设置"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/mineFragment_user_headview_iv"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_below="@id/mineFragment_user_nick_tv"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/homepage_headimg_defaut" />

                <RelativeLayout
                    android:id="@+id/mine_card_amount_container"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_alignTop="@id/mineFragment_user_headview_iv"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/mineFragment_user_headview_iv">

                    <ImageView
                        android:id="@+id/mine_card_amount_imageview"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/mine_card_amount_text"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@id/mine_card_amount_imageview"
                        android:gravity="center"
                        android:text="消费券"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/mine_card_amount"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/mine_card_amount_text"
                        android:layout_toRightOf="@id/mine_card_amount_imageview"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_business_amount_container"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_alignTop="@id/mineFragment_user_headview_iv"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/mine_card_amount_container">

                    <ImageView
                        android:id="@+id/mine_business_amount_imageview"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/mine_business_amount_text"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@id/mine_business_amount_imageview"
                        android:gravity="center"
                        android:text="权益商家"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/mine_business_amount"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/mine_business_amount_text"
                        android:layout_toRightOf="@id/mine_business_amount_imageview"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/line" />

            <RelativeLayout
                android:id="@+id/mineFragment_all_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_seletor"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的订单"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center"
                    android:text="查看全部订单"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/line" />

            <RelativeLayout
                android:id="@+id/mineFragment_all_business_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_seletor"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="会员商家"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center"
                    android:text="查看全部"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/line" />

            <GridView
                android:id="@+id/mineFragment_business_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/transparency"
                android:background="@color/white"
                android:numColumns="4"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <View style="@style/line" />

            <RelativeLayout
                android:id="@+id/mineFragment_tontact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_seletor"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系客户"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/line" />

            <RelativeLayout
                android:id="@+id/mineFragment_into_business_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_seletor"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系商家"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/line" />
        </LinearLayout>
    </com.yunwei.easydear.view.ReboundScrollView>
</LinearLayout>